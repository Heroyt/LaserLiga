root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = false
max_line_length = 120
tab_width = 4


[*.sass]
indent_size = 2
tab_width = 2

[*.scss]
indent_size = 2
tab_width = 2

[{*.bplist,*.dist,*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.stylelintrc,StoreLocator.mdj,bowerrc,composer.lock,jest.config}]
indent_size = 2
tab_width = 2

[{*.ctp,*.hphp,*.inc,*.module,*.php,*.php4,*.php5,*.phtml,sync}]
indent_size = 2
tab_width = 2
