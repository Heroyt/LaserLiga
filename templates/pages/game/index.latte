{layout '../../@layout.latte'}

{varType App\GameModels\Game\Game $game}
{varType App\GameModels\Game\Today $today}
{varType string $prevGame}
{varType string $nextGame}
{varType \App\Models\Auth\User|null $user}

{define teamColor}
	{default int $teamColor = 0}
	<span class="team-color bg-team-{$teamColor}"></span>
{/define}

{define containerClasses}
	game-results {if $game->mode->isSolo()}solo{/if} py-5 mb-5 mb-lg-0
{/define}

{define addHead}
	{ifset $game}
		<style>
			:root {
			{foreach $game::getTeamColors() as $key => $color} {var string $varName1 = '--team-'.$key} {var string $varName2 = '--team-'.$key.'-text'} {$varName1}: {$color|noescape};
			{$varName2}:{\App\Tools\Color::getFontColor($color)|noescape};
			{/foreach}
			}

			{foreach $game::getTeamColors() as $key => $color}
			.bg-team-{$key} {
				--bg-color: var(--team-{$key});
				--text-color: var(--team-{$key}-text);
				background-color: var(--team-{$key});
				color: var(--team-{$key}-text);
			}

			.text-team-{$key} {
				color: var(--team-{$key});
			}

			{/foreach}
		</style>
	{/ifset}
	{ifset $style}
		{$style->getCssClasses()|noescape}
	{/ifset}
{/define}

{define content}
	{include resultsHeader}
	{if $game->mode->isTeam() && $game->mode->settings->partTeams}
		{include resultsTeams}
	{/if}
	{if $game->mode->settings->partPlayers}
		{include resultsPlayers}
	{/if}
	{if $game->mode->settings->partHits}
		{include resultsHits}
	{/if}

	<div class="modal fade" id="leaderboard-modal" tabindex="-1">
		<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">{lang 'Dnešní pořadí podle', context: 'results.today'}:</h5>
					<button type="button" class="text-dark btn btn-lg" data-bs-dismiss="modal"
							aria-label="{lang 'Close', context: 'actions'}">
						<i class="fa-solid fa-xmark"></i>
					</button>
				</div>
				<div class="modal-body">
				</div>
			</div>
		</div>
	</div>

	<div class="modal fade" id="trophy-modal" tabindex="-1">
		<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">{lang 'Dostupné trofeje', context: 'results.bests'}:</h5>
					<button type="button" class="text-dark btn btn-lg" data-bs-dismiss="modal"
							aria-label="{lang 'Close', context: 'actions'}">
						<i class="fa-solid fa-xmark"></i>
					</button>
				</div>
				<div class="modal-body">
					<ul class="list-group">
						<li n:foreach="\App\GameModels\Game\PlayerTrophy::getFields() as $field"
								class="list-group-item d-flex align-items-center">
							<div style="width: 5rem;">
								{svgIcon $field['icon'], '', '2rem'}
							</div>
							<div>
								<div class="fw-bold">{$field['name']}</div>
								<div class="fs-sm">{$field['description']}</div>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>

	<div class="modal fade" id="tournament-modal" tabindex="-1" data-show="true">
		<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">{lang 'Písecký pohár 2023!'}</h5>
					<button type="button" class="text-dark btn btn-lg" data-bs-dismiss="modal"
							aria-label="{lang 'Close', context: 'actions'}">
						<i class="fa-solid fa-xmark"></i>
					</button>
				</div>
				<div class="modal-body text-center">
					<img src="{getUrl}upload/tournament/1-6432805c4a1d2.png" alt="Písecký pohár 2023"
						 class="img-fluid mb-3">
					<h3 class="text-center">{lang 'Přihlaš i svůj (vý)herní tým na pravidelný turnaj!'}</h3>
					<h4>{lang 'Začátečníci'} - 30.4.2023</h4>
					<h4>{lang 'Pokročilí'} - 28.5.2023</h4>
					<h4>{lang 'Mazáci'} - 25.6.2023</h4>
					<p>{lang '3 kategorie - začátečníci, pokročilí a mazáci'}</p>
					<p>{lang 'Možnost tréninkových her za 50 Kč / hráč / hra'}</p>
					<p>{lang 'Domluv si trénink s profíky!'}</p>
					<p class="mt-3">
						<a href="{link 'league', 1}" class="btn btn-primary btn-lg"
						   target="_blank">
							Informace a přihláška
						</a>
					</p>
					<p class="mt-3">
						<button type="button" class="btn btn-secondary" id="dont-show" data-bs-dismiss="modal">
							{lang 'Nezobrazovat'}
						</button>
					</p>
				</div>
			</div>
		</div>
	</div>
{/define}

{define resultsWin}
	{var App\GameModels\Game\Player|App\GameModels\Game\Team|null $win = $game->mode->getWin($game)}
	<div class="results-win">
		{if is_null($win)}
			<div class="print-primary">
				{lang 'Remíza', context: 'results'}
			</div>
		{elseif $win instanceof App\GameModels\Game\Team}
			<div class="bg-team-{$win->color}">
				{lang 'Vítězství', context: 'results'}: {$win->name}
			</div>
		{elseif $win instanceof App\GameModels\Game\Player}
			<div class="{if $game->mode->isSolo()}print-primary{else}bg-team-{$win->getTeam()->color}{/if}">
				{lang 'Vítězství', context: 'results'}: {$win->name}
			</div>
		{/if}
	</div>
{/define}

{define resultsHeader}
	<div class="results-header text-start row">
		<div class="col-12 mt-2 game-head">
			<div class="game-info py-3 rounded-10 shadow bg-white text-center d-flex flex-column justify-content-center align-items-center">
				<a href="{link ['arena', $game->arena->id]}" aria-label="{lang 'Zobrazit stránku arény'}"
				   title="{lang 'Zobrazit stránku arény'}">
					{$game->arena->getLogoHtml()|noescape}
				</a>
				<div class="my-1">
					<strong>{lang 'Kód hry', context: 'results.info'}:</strong>
					{$game->code}
				</div>
				<div class="my-1">
					<strong>{lang 'Datum', context: 'results.info'}:</strong>
					{$game->start->format('d.m.Y H:i:s')}
				</div>
				<div class="my-1">
					<strong>{lang 'Herní mód', context: 'results.info'}:</strong>
					{lang $game->mode->name, context: 'gameModes'}
				</div>
				<div n:ifset="$game->group">
					<strong>{lang 'Skupina', context: 'results.info'}:</strong>
					{$game->group->name}
				</div>
			</div>
			<div class="scoring p-0">
				<div class="rounded-10 bg-primary d-flex justify-content-between cursor-pointer align-items-center p-3 mt-4 collapsed"
					 data-bs-toggle="collapse"
					 data-bs-target="#scoring-body"
					 data-track-content="" data-content-name="Results - Legenda">
					<h5 class="m-0"><i class="fas fa-star"></i> {lang 'Bodování', context: 'results'}</h5>
					<div class="collapse-indicator">
						<i class="fa-solid fa-angle-down collapse-indicator-collapsed"></i>
						<i class="fa-solid fa-angle-up collapse-indicator-not-collapsed"></i>
					</div>
				</div>
				<div class="bg-white collapse shadow rounded-bottom-10 text-center"
					 id="scoring-body">
					<div class="d-flex flex-wrap justify-content-evenly">
						<div class="my-1 d-flex py-2 px-3 align-items-center border-bottom col-12 col-md-6">
							<strong class="d-block w-50">
								{lang 'Body za zásah', context: 'results.info'}:
							</strong>
							<div class="w-50 text-end">{$game->scoring->hitOther} {svgIcon 'star', '1em'}</div>
						</div>
						<div class="my-1 d-flex py-2 px-3 align-items-center border-bottom col-12 col-md-6">
							<strong class="d-block w-50">
								{lang 'Body za smrt', context: 'results.info'}:
							</strong>
							<div class="w-50 text-end">{$game->scoring->deathOther} {svgIcon 'star', '1em'}</div>
						</div>
						<div class="my-1 d-flex py-2 px-3 align-items-center border-bottom col-12 col-md-6">
							<strong class="d-block w-50">
								{lang 'Body za zásah vlastního', context: 'results.info'}:
							</strong>
							<div class="w-50 text-end">{$game->scoring->hitOwn} {svgIcon 'star', '1em'}</div>
						</div>
						<div class="my-1 d-flex py-2 px-3 align-items-center border-bottom col-12 col-md-6">
							<strong class="d-block w-50">
								{lang 'Body za smrt od vlastního hráče', context: 'results.info'}:
							</strong>
							<div class="w-50 text-end">{$game->scoring->deathOwn} {svgIcon 'star', '1em'}</div>
						</div>
						<div class="my-1 d-flex py-2 px-3 align-items-center border-bottom" n:if="$game->scoring->shot !== 0">
							<strong class="d-block w-50">
								{lang 'Body za výstřel', context: 'results.info'}:
							</strong>
							<div class="w-50 text-end">{$game->scoring->shot} {svgIcon 'star', '1em'}</div>
						</div>
						{if method_exists($game, 'isMinesOn') && $game->isMinesOn()}
							<div class="my-1 d-flex py-2 px-3 align-items-center border-bottom col-12 col-md-6">
								<strong class="d-block w-50">
									{lang 'Body smrt od miny', context: 'results.info'}:
								</strong>
								<div class="w-50 text-end">{$game->scoring->hitPod} {svgIcon 'star', '1em'}</div>
							</div>
							<div class="my-1 d-flex py-2 px-3 align-items-center border-bottom col-12 col-md-6">
								<strong class="d-block w-50">
									{lang 'Body za bonus', context: 'results.info'}
									- {lang 'agent', context: 'results.bonus'}
									:
								</strong>
								<div class="w-50 text-end">{$game->scoring->agent} {svgIcon 'star', '1em'}</div>
							</div>
							<div class="my-1 d-flex py-2 px-3 align-items-center border-bottom col-12 col-md-6">
								<strong class="d-block w-50">
									{lang 'Body za bonus', context: 'results.info'}
									- {lang 'neviditelnost', context: 'results.bonus'}
									:
								</strong>
								<div class="w-50 text-end">{$game->scoring->invisibility} {svgIcon 'star', '1em'}</div>
							</div>
							<div class="my-1 d-flex py-2 px-3 align-items-center border-bottom col-12 col-md-6">
								<strong class="d-block w-50">
									{lang 'Body za bonus', context: 'results.info'}
									- {lang 'samopal', context: 'results.bonus'}
									:
								</strong>
								<div class="w-50 text-end">{$game->scoring->machineGun} {svgIcon 'star', '1em'}</div>
							</div>
							<div class="my-1 d-flex py-2 px-3 align-items-center border-bottom col-12 col-md-6">
								<strong class="d-block w-50">
									{lang 'Body za bonus', context: 'results.info'}
									- {lang 'štít', context: 'results.bonus'}
									:
								</strong>
								<div class="w-50 text-end">{$game->scoring->shield} {svgIcon 'star', '1em'}</div>
							</div>
						{/if}
					</div>
				</div>
			</div>
			<div class="icon-legend p-0">
				<div class="rounded-10 bg-primary d-flex justify-content-between cursor-pointer align-items-center p-3 mt-4 collapsed"
					 data-bs-toggle="collapse"
					 data-bs-target="#legend"
					 data-track-content="" data-content-name="Results - Legenda">
					<h5 class="m-0"><i class="fas fa-info-circle"></i> {lang 'Legenda'}</h5>
					<div class="collapse-indicator">
						<i class="fa-solid fa-angle-down collapse-indicator-collapsed"></i>
						<i class="fa-solid fa-angle-up collapse-indicator-not-collapsed"></i>
					</div>
				</div>
				<div class="card-body bg-white collapse shadow rounded-bottom-10 text-center"
					 id="legend">
					<div class="d-flex flex-wrap justify-content-evenly align-items-center">
						<div class="legend m-3">
							{svgIcon 'star', '', '1em'} - {lang 'Skóre', context: 'results'}
						</div>
						<div class="legend m-3">
							<i class="fa-solid fa-medal"></i> - {lang 'Herní úroveň'}
						</div>
						<div class="legend m-3">
							{svgIcon 'bullets', '', '1em'} - {lang 'Výstřely', context: 'results'}
						</div>
						<div class="legend m-3">
							{svgIcon 'kill', '', '1em'} - {lang 'Zásahy', context: 'results'}
						</div>
						<div class="legend m-3">
							{svgIcon 'skull', '', '1em'} - {lang 'Smrti', context: 'results'}
						</div>
						<div class="legend m-3">
							{svgIcon 'dead', '', '1em'} - {lang 'Zásahy od/do spoluhráčů', context: 'results'}
						</div>
						{if method_exists($game, 'isMinesOn') && $game->isMinesOn() && $game->mode->settings->playerMines}
							<div class="legend m-3">
								{svgIcon 'base_2', '', '1em'} - {lang 'Bonusy', context: 'results'}
							</div>
							<div class="legend m-3">
								{svgIcon 'agent', '', '1em'} - {lang 'Agent', context: 'results.bonus'}
							</div>
							<div class="legend m-3">
								{svgIcon 'invisibility', '', '1em'} - {lang 'Neviditelnost', context: 'results.bonus'}
							</div>
							<div class="legend m-3">
								{svgIcon 'machine_gun', '', '1em'} - {lang 'Samopal', context: 'results.bonus'}
							</div>
							<div class="legend m-3">
								{svgIcon 'shield', '', '1em'} - {lang 'Štít', context: 'results.bonus'}
							</div>
						{/if}
					</div>
				</div>
			</div>
		</div>
		<div class="text-center">
			<button type="button" class="btn-lg btn btn-success d-none my-3" data-trigger="share"
					data-title="{sprintf(lang('Výsledky ze hry - %s %s'), lang($game->getMode()?->name, context: 'gameModes'), $game->arena?->name)}"
					data-url="{link 'g', $game->code}">
				<i class="fa-solid fa-share"></i>
				{lang 'Sdílet'}
			</button>
		</div>
		<div n:if="isset($game->group)" class="col-12 mt-3 text-center">
			<div class="btn-group btn-group-lg">
				<a n:if="!empty($prevGame)" href="{link ['game', $prevGame]}" class="btn btn-primary"
											data-track-content=""
											data-content-name="Results - Previous game">
					<i class="fa-solid fa-caret-left"></i>
					<span class="d-none d-lg-inline">
					{lang 'Předchozí hra', context: 'results.group'}
					</span>
				</a>
				<a href="{link ['game', 'group', $game->group->getEncodedId()]}" class="btn btn-secondary"
				   data-track-content="" data-content-name="Results - Group">
					<i class="fa-solid fa-list"></i>
					{lang 'Skupina'}
				</a>
				<a n:if="!empty($nextGame)" href="{link ['game', $nextGame]}" class="btn btn-primary"
											data-track-content="" data-content-name="Results - Next game">
					<span class="d-none d-lg-inline">
					{lang 'Následující hra', context: 'results.group'}
					</span>
					<i class="fa-solid fa-caret-right"></i>
				</a>
			</div>
		</div>
	</div>
{/define}

{define resultsPlayers}
	{var int $maxShots = $game->getPlayers()->query()->sortBy('shots')->desc()->first()->shots}
	{var int $count = count($game->getPlayers())}
	<section class="results-players">
		{foreach $game->getPlayersSorted() as $key => $player}
			<div class="results-player rounded-10 my-2 bg-white flex-fill shadow">
				<div class="player-head collapsed bg-team-{$player->getTeamColor()} p-2" data-bs-toggle="collapse"
					 data-track-content="" data-content-name="Results - player" data-content-target="{$player->name}"
					 data-bs-target="#player-body-{$key}">
					<div class="position">
						{$iterator->counter}.
					</div>

					<div class="player-name">
						<div class="name">
							{$player->name}
						</div>
						<div class="player-rank">
							{var array $rank = $player->getBestAt()}
							{svgIcon $rank['icon'], '', 15}
							<div class="rank-name">{$rank['name']}</div>
						</div>
					</div>

					{include playerScore}

					<div class="collapse-indicator">
						<i class="fa-solid fa-angle-down collapse-indicator-collapsed"></i>
						<i class="fa-solid fa-angle-up collapse-indicator-not-collapsed"></i>
					</div>
				</div>
				<div class="player-body rounded-bottom-10 collapse bg-white p-3" id="player-body-{$key}">
					<div class="player-actions">
						{if isset($user) && !isset($player->user) && comparePlayerNames($user->name, $player->name)}
							<p class="text-center">
								<button class="btn btn-primary setMe" type="button" data-id="{$player->id}"
										data-system="{$player::SYSTEM}"
										data-content-piece="Přivlastnit">
									{lang 'Přivlastnit'}
								</button>
							</p>
						{elseif isset($player->user)}
							<p class="text-center">
								<a href="{link ['user', $player->user->getCode()]}" class="btn btn-primary"
								   data-toggle="tooltip" title="{lang 'Profil hráče'}"
								   data-content-piece="Profile">
									<i class="fa-solid fa-user"></i>
									{lang 'Profil hráče'}
								</a>
							</p>
						{/if}
					</div>

					{include playerTrophies}
					{include playerScoreDetail}
					{include playerAccuracy}
					{include playerShots}
					{include playerHits}
					{include playerFavourites}
					{include playerHitsPlayers}
					{if method_exists($game, 'isMinesOn') && $game->isMinesOn() && $game->mode->settings->playerMines && $player->bonus->getSum() > 0}
						{include playerMines}
					{/if}
					{include playerToday}
				</div>
			</div>
		{/foreach}
	</section>
{/define}

{define playerScoreDetail}
	{varType App\GameModels\Game\Player $player}
	{var float|null $diff = $player->getRankDifference()}
	<div class="player-score-detail" data-content-piece="Score">
		<h4>{lang 'Rozpad skóre a herní úrovně'}</h4>
		<div class="row px-5">
			<div class="col-12 col-md-6">
				<h5 class="border-bottom py-2 mt-3" {ifset $diff}style="line-height: 2.4;"{/ifset}>
					{lang 'Skóre'}: {$player->score|number:0,',','&nbsp;'|noescape}
					<i class="fa-solid fa-star"></i>
				</h5>
				{var int $hitScore = ($game->getMode()->isSolo() || !isset($player->hitsOther) ? $player->hits : $player->hitsOther) * $game->scoring->hitOther}
				{include playerScoreDetailPart 'Zásahy', $hitScore}
				{var int $deathScore =
				(($game->getMode()->isSolo() || !isset($player->deathsOther) ? $player->deaths : $player->deathsOther) * $game->scoring->deathOther) +
				($game->getMode()->isSolo() || !isset($player->deathsOther) ? 0 : $player->deathsOwn) * $game->scoring->deathOwn}
				{include playerScoreDetailPart 'Smrti', $deathScore}
				{if $game->getMode()->isTeam() && isset($player->hitsOwn) && $player->hitsOwn > 0}
					{var int $hitOwnScore = $player->hitsOwn * $game->scoring->hitOwn}
					{include playerScoreDetailPart 'Zásahy spoluhráčů', $hitOwnScore}
				{/if}
				{if isset($player->scoreMines) && $player->scoreMines !== 0}
					{include playerScoreDetailPart 'Smrti od min', $player->scoreMines}
				{/if}
				{if isset($player->bonus) && $player->bonus->getSum() > 0}
					{var int $bonusScore = ($player->bonus->agent * $game->scoring->agent) + ($player->bonus->machineGun * $game->scoring->machineGun) + ($player->bonus->invisibility * $game->scoring->invisibility) + ($player->bonus->shield * $game->scoring->shield)}
					{include playerScoreDetailPart 'Bonusy', $bonusScore}
				{/if}
				{if isset($player->shotPoints) && $player->shotPoints !== 0}
					{include playerScoreDetailPart 'Výstřely', $player->shotPoints}
				{/if}
			</div>
			<div class="col-12 col-md-6">
				<h5 class="border-bottom py-2 mt-3">
					{lang 'Herní úroveň'}: {$player->getSkill()|number:0,',','&nbsp;'|noescape}
					<i class="fa-solid fa-medal"></i>
					{ifset $diff}
						<br>
						<span class="fs-6">({sprintf(lang('%s k herní úrovni hráče'), ($diff > 0 ? '+' : '') . number_format($diff,2,',',''))})</span>
					{/ifset}
				</h5>
				{var int $sum = 0}
				{foreach $player->getSkillParts() as $key => $skill}
					{do $sum += $skill}
					{include playerSkillDetailPart, $key, $skill}
				{/foreach}
				{include playerSkillDetailPart, 'rounding', $player->getSkill() - $sum}
			</div>
		</div>
	</div>
{/define}

{define playerScoreDetailPart string $label, int $score}
	<p class="my-1">
		{lang $label}:
		<span n:class="$score > 0 ? text-success, $score < 0 ? text-danger">
			{if $score > 0}+{/if}{$score|number:0,',','&nbsp;'|noescape}
			<i class="fa-solid fa-star"></i>
		</span>
	</p>
{/define}
{define playerSkillDetailPart string $key, int $skill}
	<p class="my-1" n:if="$skill !== 0.0">
		{switch $key}
			{case 'hits'} {lang 'Zásahy'}:
			{case 'teamHits'} {lang 'Zásahy spoluhráčů'}:
			{case 'kd'} {lang 'K:D'}:
			{case 'accuracy'} {lang 'Přesnost'}:
			{case 'bonuses'} {lang 'Bonusy'}:
			{case 'rounding'} <i class="fa-solid fa-circle-question" data-toggle="tooltip"
